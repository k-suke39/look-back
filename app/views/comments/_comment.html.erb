<div tabindex="0" aria-label="card 1" class="focus:outline-none mb-7 bg-white p-6 shadow rounded">
  <div class="flex items-center border-b border-gray-200 pb-6">
    <div class="flex items-start justify-between w-full">
      <div class="pl-3">
        <p class="focus:outline-none text-sm leading-normal pt-2 text-gray-500"><%= comment.content %></p>
        <p class="focus:outline-none text-sm leading-normal pt-2 text-gray-500">by <%= comment.user.nickname %></p>
      </div>
      <% if user_signed_in? %>
        <% if current_user&.owns?(comment) %>
          <%= link_to "削除する", comment_path(comment), data: {turbo_method: :delete}, class: "text-sm bg-transparent hover:bg-blue-500 text-blue-700 hover:text-white py-1 px-3 border border-blue-500 hover:border-transparent rounded" %>
        <% end %>
      <% end %>
      </div>
    </div>
</div>