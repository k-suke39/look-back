<%= form_with model: comment, url: scrap_comments_path(scrap), class: "w-3/4 max-w-lg mb-3" do |f| %>
  <div class="mt-1">
    <%= f.text_field :content, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm placeholder-gray-400 border border-gray-300 rounded-md", placeholder: "Railsチュートリアル1章を完了" %>
    <%= f.submit "コメントする", class: "inline-block justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>